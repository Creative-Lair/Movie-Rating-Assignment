<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_icon"
        android:padding="2dip"
        android:cacheColorHint="#00000000"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon" />


    <TextView
        android:id="@+id/row_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminator 2"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/row_icon"
        android:layout_toRightOf="@+id/row_icon"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/row_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 5.5, 2340 votes"
        android:layout_below="@id/row_label"
        android:layout_alignStart="@+id/row_label"
        android:layout_alignLeft="@+id/row_label"
        android:layout_margin="2dp"
        android:textSize="14sp" />

</RelativeLayout>